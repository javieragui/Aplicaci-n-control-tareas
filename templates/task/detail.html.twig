{% extends 'base.html.twig' %}

{% block title %}Todas las tareas{% endblock %}

    {% block body %}

        <div class="example-wrapper">
        <h2>{{ task.title }}</h2>
        <p class="data-task">
        {{ task.user.name }} {{ task.user.surname }} {{ task.user.name }} | {{ task.createAt|date('d/m/Y h:i') }} |
        {% if task.priority == 'high' %}
            {{ 'ALTA' }}
        {% endif %}
        {% if task.priority == 'medium' %}
            {{ 'MEDIA' }}
        {% endif %}
        {% if task.priority == 'low' %}
            {{ 'BAJA' }}
        {% endif %}
        </p>
        <p>
        {{ task.content }}
        </p>

        </div>
    {% endblock %}